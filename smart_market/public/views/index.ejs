        <script>
            var dataView = <%-JSON.stringify(collInfos)%>;
            var dataLabels = <%-JSON.stringify(labels)%>;
            
            // console.log(dataLabels)
            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: dataLabels,
                    datasets: [dataView]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        </script>

