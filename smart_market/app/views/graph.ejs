    <head>  
        <meta charset="UTF-8">  
        <title>MY APP</title>
        <!-- import the webpage's javascript file -->
        <!-- <script src="/server.js" defer></script> -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
        
    </head>

    
    <body>
        <h1 align="center" style="margin-top: 0.5em;" ><strong>Smart Market</strong></h1>
        <h3 align="center">Total reciepts</h3>
        <section class="container" id="section-2"> 
                <div class="row"> 
                    <div id="column1"> 

                            <div class = "bottoms">
                                    <p><form action="/" align="left"> <input type="submit" value="Back Home" class="w3-button w3-black" style="border-radius: 12px;"/> </form>
                                    </p>
                            </div>

                        <div class="column-title" style = "border-top: 2px solid rgba(0, 0, 0, 0.2);border-bottom: 2px solid rgba(0, 0, 0, 0.2);"> 
                                <p>
                                Distribution of prices in supermarkets:
                                </p>

                                <form action="/graph2" method="POST" style="margin-left: 4.5em ;margin-top: 0.5em;" align="left"> 
                                    <label for="bday" >From:</label>
                                    <input type="date" id="from" name="from" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" style="width: 160px;border-radius: 10px;">
                                    <span class="validity"></span>

                                    <br>
                                    <label for="bday">To:</label>
                                    <input type="date" id="to" name="to" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" value="from date" style="width: 160px;border-radius: 10px;margin-left: 1.4em;margin-top: 0.5em;">
                                    <span class="validity"></span>
                                    
                                    <br>
                                    <label for="ccexpm">Product</label>

                                    <select id = "ccexpm" name = "ccexpm" style="border-radius: 10px; width: 160px;"">
                                        <optgroup label="Select Table">
                                                <option value=""  >Select Grocery</option>
                                                <% gros.forEach(function(gro){ %>
                                                <option value="<%= gro %>"><%= gro %></option>
                                                <% }) %>
                                            </optgroup>
                                    </select>
                                    
                                    <input type="submit" value="submit" style="margin-left: 1.2em;margin-top: 0.5em; border-radius: 12px;margin-bottom: 0.5em;">
                                </form>   
                        </div> 


                        <div class="column-title" style = "border-bottom: 2px solid rgba(0, 0, 0, 0.2);"> 
                                <p>
                                Volume of products in supermarkets:
                                </p>
                                                                
                                <form action="/quotes" method="POST" style="margin-left: 4.5em ;margin-top: 0.5em;" align="left"> 
                                    <p align="left">
                                            <strong>First date:</strong>
                                    </p>

                                    <label for="bday" >From:</label>
                                    <input type="date" id="from" name="from" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" style="width: 160px;border-radius: 10px;">
                                    <span class="validity"></span>

                                    <br>
                                    <label for="bday">To:</label>
                                    <input type="date" id="to" name="to" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" value="from date" style="width: 160px;border-radius: 10px;margin-left: 1.4em;margin-top: 0.5em;">
                                    <span class="validity"></span>
                                    
                                    <br>
                                    <p align="left">
                                            <strong>Second date:</strong>
                                    </p>
                                    <label for="bday" >From:</label>
                                    <input type="date" id="from" name="from" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" style="width: 160px;border-radius: 10px;">
                                    <span class="validity"></span>

                                    <br>
                                    <label for="bday">To:</label>
                                    <input type="date" id="to" name="to" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" value="from date" style="width: 160px;border-radius: 10px;margin-left: 1.4em;margin-top: 0.5em;">
                                    <span class="validity"></span>
                                    
                                    <br>
                                    <label for="ccexpm">Product</label>
                                    <select id = "ccexpm" name = "ccexpm" style="border-radius: 10px; width: 160px;"">
                                        <optgroup label="Select Table">
                                                <option value=""  >Select Grocery</option>
                                                <% gros.forEach(function(gro){ %>
                                                <option value="<%= gro %>"><%= gro %></option>
                                                <% }) %>
                                            </optgroup>
                                    </select>
                                    
                                    <input type="submit" value="submit" style="margin-left: 1.2em;margin-top: 0.5em; border-radius: 12px;margin-bottom: 0.5em;">
                                </form>   
                        </div> 
                        
                    </div> 
                                
                    <div id="column2"> 
                        <div class="column-title"> 
                        </div> 
                            
                            
                            <div class="container" style="width: 200%;margin-left: 2.5em;margin-top: 2.5em;">
                                <canvas id="myChart" style="width:10;height: 5;"></canvas>
                            </div>
                    
                            <script>
                                var dataView = <%-JSON.stringify(collInfos)%>;
                                var dataLabels = <%-JSON.stringify(labels)%>;
                                var groceries = <%-JSON.stringify(gros)%>
                                console.log(groceries);
                                
                                // console.log(dataLabels)
                                var ctx = document.getElementById('myChart').getContext('2d');
                                var myChart = new Chart(ctx, {
                                    type: 'bar',
                                    data: {
                                        labels: dataLabels,
                                        datasets: [dataView]
                                    },
                                    options: {
                                        scales: {
                                            yAxes: [{
                                                ticks: {
                                                    beginAtZero: true
                                                }
                                            }]
                                        }
                                    }
                                });
                            </script>
                    

                    </div>  
                </div> 


        
    </body>
</html>